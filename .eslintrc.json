{
	"env": {
		"es2020": true,
		"shared-node-browser": true
	},
	"extends": [
		"@spyke/eslint-config"
	],
	"globals": {
		"Atomics": "readonly",
		"SharedArrayBuffer": "readonly"
	},
	"ignorePatterns": [
		"**/__snapshots__/",
		"**/build/",
		"**/coverage/",
		"**/dist/",
		"**/node_modules/"
	],
	"overrides": [
		{
			"env": {
				// Disable jest globals to use it only from imports.
				"jest": false,
				"jest/globals": false
			},
			"extends": [
				"plugin:jest/recommended"
			],
			"files": [
				"**/*.test.*.js",
				"**/*.test.js"
			],
			"plugins": [
				"jest"
			],
			"rules": {
				"jest/expect-expect": "off"
			}
		},
		{
			"env": {
				"node": true
			},
			"files": [
				"**/*.@(c|m)js"
			]
		}
	],
	"parser": "babel-eslint",
	"parserOptions": {
		"ecmaVersion": 2020,
		"sourceType": "module"
	},
	"root": true,
	"rules": {
		"quotes": [
			"error",
			"backtick"
		]
	}
}
