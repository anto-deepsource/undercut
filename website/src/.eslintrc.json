{
	"env": {
		"browser": true
	},
	"extends": [
		"plugin:react/recommended",
		"plugin:react-hooks/recommended"
	],
	"parserOptions": {
		"ecmaFeatures": {
			"jsx": true
		}
	},
	"plugins": [
		"react",
		"react-hooks"
	],
	"rules": {
		"import/no-unresolved": [
			"error",
			{
				"ignore": [
					"^@docusaurus\/",
					"^@theme\/"
				]
			}
		]
	},
	"settings": {
		"react": {
			"version": "detect"
		}
	}
}
